<div>
  <h1>Schedule View</h1>
  <h1 class="text-center"><%= @schedule.event_name %></h1>
</div>

<br />
<br />
<br />

<div>
  <strong>Event Date: </strong>
  <%= @schedule.event_date %>
  <br />
  <strong>Event Time: </strong>
  <%= @schedule.event_time.strftime("%I:%M:%S") %>
  <br />
  <strong>Event Venue: </strong>
  <%= @schedule.venue %>
  <br />
  <br />
  <br />
  <strong>Detail: </strong>
  <br />
  <%= @schedule.detail %>
  <br />
</div>

<div>
<br />
  <strong>RSVP: </strong>
  <br />
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Head Count</th>
      <th>Food to Bring</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @schedule.rsvps.each do |t| %>
    <tr>
      <td><%= t.name %></td>
      <td><%= t.head_count %></td>
      <td><%= t.food_bring %></td>    
    </tr>
  <% end %>   
  </tbody> 

</div>



  
